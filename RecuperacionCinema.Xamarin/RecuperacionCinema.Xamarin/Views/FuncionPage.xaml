<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecuperacionCinema.Xamarin.Views.FuncionPage"
             Title="Funciones">

    <ListView ItemSelected="SeleccionFuncion">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="Titulo"/>
                        <Label Text="{Binding Nombre}"/>

                        <Label Text="Fecha"/>
                        <Label Text="{Binding FechaEstreno}"/>

                        <Label Text="Cantidad Boletas"/>
                        <Entry Text=""/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Cinema}"/>
                            <Label Text="{Binding Sala}"/>
                            <Label Text="{Binding Ciudad}"/>
                            <Label Text="{Binding Precio}"/>
                        </StackLayout>

                   
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
    
</ContentPage>